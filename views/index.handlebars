<main class="container">

    <div class="row">
        <div class="col-12 text-center">
            <h1>Eat Da Burger!</h1>
            </br>
            <img src="/assets/img/burger.png" alt="picture of a delicious cheeseburger">
        </div>
    </div>
    </br>
    <div class="row">
        <div class="col-6">
            <h2>Burgers not devoured</h2>

            {{#each burgers}}
            {{#unless this.devoured}}
            <ul>
                <li>
                    <p><span class="label"></span> {{this.id}}: {{this.burger_name}} <button class="devour"
                            data-id="{{this.id}}">Devour It!</button></p>
                </li>
            </ul>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-6">
            <h2>Burgers devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <ul>
                <li>
                    <p><span class="label"></span> {{this.id}}: {{this.burger_name}}
                </li>
            </ul>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <h3>Enter a burger you want to eat then click the "Add Burger" button!</h3>
            </br>
            <form class="create-form">
                <div class="form-group">
                    <h4>Burger Name: </h4>
                    {{!-- <label for="burg"></label> --}}
                    <textarea id="burg" name="burger" rows="2" cols="30"></textarea>
                </div>
                <button type="submit">Add Burger</button>
            </form>
            </br>
        </div>
    </div>

</main>