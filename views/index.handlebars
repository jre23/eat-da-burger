<img src="/assets/img/burger.png" alt="picture of a delicious cheeseburger">
<h1>Eat Da Burger!</h1>

<h2>Burgers not devoured</h2>
{{#each burgers}}
{{#unless this.devoured}}
<ul>
    <li>
        <p><span class="label"></span> {{this.id}}</p>
        <p><span class="label"></span> {{this.burger_name}}</p>
        <p><span class="label"></span> {{this.devoured}}</p>
        <button data-id="{{this.id}}" class="devour">Devour It!</button>
    </li>
</ul>
{{/unless}}
{{/each}}

{{#each burgers}}
{{#if this.devoured}}
<h2>Burgers devoured</h2>
<ul>
    <li>
        <p><span class="label"></span> {{this.id}}</p>
        <p><span class="label"></span> {{this.burger_name}}</p>
        <p><span class="label"></span> {{this.devoured}}</p>
    </li>
</ul>
{{/if}}
{{/each}}

<h2>Enter a burger you want to eat then click the "Add Burger" button!</h2>

<form class="create-form">
    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <textarea id="burg" name="burger" rows="8" cols="40"></textarea>
    </div>
    <button type="submit">Add Burger</button>
</form>